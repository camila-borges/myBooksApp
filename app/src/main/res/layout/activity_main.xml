<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myBooksBackground"
    android:gravity="center_horizontal"
    android:padding="60dp"
    android:paddingRight="60dp"
    tools:context="com.books.my.mybooks.MainActivity">

    <ImageView
        android:id="@+id/myBooksLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/myBooksLogo" />

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myBooksLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:style="@style/LoginPage"
        android:fontFamily=""
        android:text="MyBooks Roboto"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/editTextUser"
        android:style="@style/LoginPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appTitle"
        android:layout_marginTop="15dp"
        android:hint="UsuÃ¡rio"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:style="@style/LoginPage"
        android:layout_below="@+id/editTextUser"
        android:layout_marginTop="15dp"
        android:hint="Senha"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPassword"
        android:layout_marginTop="20dp"
        android:text="Logar" />

</RelativeLayout>
